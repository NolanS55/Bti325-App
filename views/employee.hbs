<div class="row">
    <div class="col-md-12">
        {{#each viewData.employee}}
        <h2>{{firstName}} {{lastName}} - Employee: {{employeeNum}}</h2>
        {{/each}}
        <hr>
        <form method="post" action="/employee/update">
        {{#each viewData.employee}}
            <input type="hidden" name="employeeNum" value="{{employeeNum}}">
        {{/each}}
            <fieldset>
                <legend>Personal Information</legend>
                {{#each viewData.employee}}
                <div class="row">
                   <div class="col-md-6">
                      <div class="form-group">
                          <label for="firstName">First Name:</label>
                          <input class="form-control" id="firstName" name="firstName" type="text" value="{{firstName}}">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="lastName">Last Name:</label>
                            <input class="form-control" id="lastName" name="lastName" type="text" value="{{lastName}}">
                        </div>
                  </div>
               </div>
    
               <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="email"> Email: </label>
                            <input class="form-control" id="email" name="email" type="email" value="{{email}}">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="SSN"> Social Security Number: </label>
                            <input class="form-control" id="SSN" name="SSN" type="text" value="{{SSN}}" readonly="">
                        </div>
                    </div>
               </div>
                {{/each}}
               <div class="row">
                    {{#each viewData.employee}}
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressStreet"> Adress (Street): </label>
                            <input class="form-control" id="addressStreet" name="addressStreet" type="text" value="{{addressStreet}}">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressCity"> Adress (City): </label>
                                <input class="form-control" id="addressCity" name="addressCity" type="text" value="{{addressCity}}">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressState"> Adress (State): </label>
                            <input class="form-control" id="addressState" name="addressState" type="text" value="{{addressState}}">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressPostal"> Adress (Zip Code): </label>
                            <input class="form-control" id="addressPostal" name="addressPostal" type="text" value="{{addressPostal}}">
                        </div>
                    </div>
                    {{/each}}
                </div>
            </fieldset>
            <fieldset>
                <legend> Company Information </legend>
                <div class="row">
                    {{#each viewData.employee}}
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="isManager"> Manager: </label>
                            <input class="form-control" id="isManager" name="isManager" type="checkbox" {{#if isManager}} checked="" {{/if}}>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="employeeManagerNum"> Employee's Manager Number: </label>
                            <input class="for-control" id="employeeManagerNum" name="employeeManagerNum" type="text" value="{{employeeManagerNum}}">
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Status:</label><br>
                            <input class="checkbox-inline" id="fullTime" name="status" type="radio" value="Full Time" {{#equal status "Full Time"}}checked=""{{/equal}}>
                            <label for="fullTime"> Full Time </label> &nbsp;
                            <input class="checkbox-inline" id="partTime" name="status" type="radio" value="Part Time" {{#equal status "Part Time"}}checked=""{{/equal}}>
                            <label for="partTime"> Part Time </label>
                        </div>
                    </div>
                    {{/each}}
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="department"> Department: </label>
                            {{#if viewData.departments}}
                                <select class="form-control" name="department" id="department">
                                    {{#each viewData.departments}}
                                    <option value="{{departmentId}}" {{#if selected}} selected {{/if}} >{{departmentName}}</option>
                                    {{/each}}
                                </select>
                            {{else}}
                                <div>No Departments</div>
                            {{/if}}
                        </div>
                    </div>
                {{#each viewData.employee}}
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label> Hire Date: </label>
                            <input class="form-control" id="hireDate" name="hireDate" type="text" value="{{hireDate}}" readonly="">
                        </div>
                    </div>
                </div>
                {{/each}}
                </div>
            </fieldset>
            <hr>
            <input type="submit" class="btn btn-primary pull-right" value="Update Employee"><br><br><br>
        </form>
    </div>
</div>
