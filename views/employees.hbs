<div class="row">
<div class="col-md-12" class="table-responsive">
<h2>Employees</h2>
<hr>
<div class="table-responsive">
<table class="table">
<thead>
    <tr>
        <th>Employees Num</th>
        <th>Full Name</th>
        <th>Email</th>
        <th>Address</th>
        <th>Manager ID</th>
        <th>Status</th>
        <th>Department</th>
        <th> Hire On </th>
    </tr>
</thead>
{{#each employees}}
<tbody>
    <tr>
        <td>{{employeeNum}}</td>
        <td><a href="employee/{{employeeNum}}">{{firstName}} {{lastName}}</a></td>
        <td><a href="mailto:{{email}}">{{email}}</a></td>
        <td>{{addressStreet}}, {{addressState}}, {{addressPostal}}</td>
        <td><a href="/employees?manager={{employeeManagerNum}}">{{employeeManagerNum}}</a></td>
        <td><a href="/employees?status={{status}}">{{status}}</a></td>
        <td><a href="/employees?department={{department}}" style="text-center">{{department}}</a></td>
        <td>{{hireDate}}</td>
    </tr>
</tbody>
{{else}}
<div class="col-md-12 text-center">
<strong>{{message}}</strong>
</div>
{{/each}}
</table>
</div>
</div>
</div>