<div class="row">
<div class="col-md-12">
<h2>Departments</h2>
<hr>
<div class="table-responsive">
    <table class="table">
    <thead>
        <tr>
            <th>Department Number</th>
            <th>Department Name</th>
        </tr>
    </thead>
{{#each departments}}
    <tr>
        <th><a href="employees?department={{departmentId}}">{{departmentId}}</a></th>
        <th><a href="employees?department={{departmentId}}">{{departmentName}}</a></th>
    </tr>
{{else}}
<div class="col-md-12 text-center">
<strong>{{message}}</strong>
</div>
{{/each}}
</table>
</div>
</div>
</div>